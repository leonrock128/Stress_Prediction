{
    "data": {
        "file_path": "stress_data.csv",
        "test_size": 0.2,
        "random_state": 42,
        "stratify": true
    },
    "features": {
        "columns": [
            "Age",
            "Heart_Rate",
            "Pulse_Rate",
            "Sleep_Hours",
            "Sleep_Quality",
            "Physical_Activity"
        ],
        "target": "Stress_Category"
    },
    "models": {
        "RandomForest": {
            "n_estimators": 150,
            "max_depth": 20,
            "min_samples_split": 3,
            "min_samples_leaf": 1,
            "random_state": 42,
            "class_weight": "balanced",
            "n_jobs": -1
        },
        "GradientBoosting": {
            "n_estimators": 100,
            "learning_rate": 0.1,
            "max_depth": 5,
            "random_state": 42
        },
        "SVM_RBF": {
            "kernel": "rbf",
            "C": 10,
            "gamma": "scale",
            "probability": true,
            "random_state": 42,
            "class_weight": "balanced"
        },
        "SVM_Linear": {
            "kernel": "linear",
            "C": 1.0,
            "probability": true,
            "random_state": 42,
            "class_weight": "balanced"
        },
        "DecisionTree": {
            "max_depth": 20,
            "min_samples_split": 3,
            "random_state": 42,
            "class_weight": "balanced"
        },
        "KNN": {
            "n_neighbors": 5,
            "weights": "distance",
            "n_jobs": -1
        },
        "LogisticRegression": {
            "max_iter": 1000,
            "random_state": 42,
            "class_weight": "balanced"
        }
    },
    "evaluation": {
        "cv_folds": 5,
        "scoring": "accuracy"
    },
    "output": {
        "model_dir": "models",
        "results_dir": "results",
        "figures_dir": "figures"
    }
}